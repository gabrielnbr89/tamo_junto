<div class="container" style="margin: 15px auto">
    <div class="row">
        <div class="col-8 offset-2">
            <h4>Editando novedad</h4>
            <form method="post" action="/admin/novedades/editar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-1">
                    <label class="form-label" for="titulo">Título</label>
                    <input type="text" name="titulo" placeholder="Título" value="{{novedad.titulo}}"
                        class="form-control">
                </div>
                <div class="mb-1">
                    <label class="form-label" for="subtitulo">Subtítulo</label>
                    <textarea name="subtitulo" placeholder="Subtítulo"
                        class="form-control form-control-sm">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="cuerpo">Cuerpo</label>
                    <textarea name="cuerpo" placeholder="Cuerpo" class="form-control form-control-sm"
                        style="height: 180px;">{{novedad.cuerpo}}</textarea>
                </div>

                <div class="input-group mb-2">
                    <label class="input-group-text" for="imagen">Imagen</label>
                    <input type="file" class="form-control" id="imagen" name="imagen">
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" value="1" name="img_delete" id="img_delete">
                    <label class="form-check-label" for="img_delete">
                        Eliminar imagen actual
                    </label>
                    <input type="hidden" value="{{novedad.img_id}}" id="img_original" name="img_original">
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-danger" href="/admin/novedades">Volver</a>
            </form>
        </div>
    </div>
</div>